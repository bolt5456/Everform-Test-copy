{% comment %}
  Site Footer
  5-column organization: Products, Services, Company, Support, Contact
{% endcomment %}

<footer class="footer">
  <div class="footer__container container">
    <div class="footer__grid">
      {%- comment -%}Column 1: Products{%- endcomment -%}
      {% if section.settings.show_products_column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.products_heading }}</h3>
          <ul class="footer__list">
            {% for block in section.blocks %}
              {% if block.type == 'products_link' %}
                <li class="footer__list-item">
                  <a href="{{ block.settings.link }}" class="footer__link">
                    {{ block.settings.label }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%}Column 2: Services{%- endcomment -%}
      {% if section.settings.show_services_column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.services_heading }}</h3>
          <ul class="footer__list">
            {% for block in section.blocks %}
              {% if block.type == 'services_link' %}
                <li class="footer__list-item">
                  <a href="{{ block.settings.link }}" class="footer__link">
                    {{ block.settings.label }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%}Column 3: Company{%- endcomment -%}
      {% if section.settings.show_company_column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.company_heading }}</h3>
          <ul class="footer__list">
            {% for block in section.blocks %}
              {% if block.type == 'company_link' %}
                <li class="footer__list-item">
                  <a href="{{ block.settings.link }}" class="footer__link">
                    {{ block.settings.label }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%}Column 4: Support{%- endcomment -%}
      {% if section.settings.show_support_column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.support_heading }}</h3>
          <ul class="footer__list">
            {% for block in section.blocks %}
              {% if block.type == 'support_link' %}
                <li class="footer__list-item">
                  <a href="{{ block.settings.link }}" class="footer__link">
                    {{ block.settings.label }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {%- comment -%}Column 5: Contact{%- endcomment -%}
      {% if section.settings.show_contact_column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.contact_heading }}</h3>
          <ul class="footer__contact-list">
            <li class="footer__contact-item">
              <strong>Phone:</strong><br>
              <a href="tel:{{ settings.contact_phone | remove: ' ' }}" class="footer__link">
                {{ settings.contact_phone }}
              </a>
            </li>
            <li class="footer__contact-item">
              <strong>Email:</strong><br>
              <a href="mailto:{{ settings.contact_email }}" class="footer__link">
                {{ settings.contact_email }}
              </a>
            </li>
            <li class="footer__contact-item">
              <strong>Hours:</strong><br>
              {{ settings.contact_hours }}
            </li>
            <li class="footer__contact-item">
              <strong>Address:</strong><br>
              {{ settings.contact_address | newline_to_br }}
            </li>
          </ul>

          {%- comment -%}Social media links{%- endcomment -%}
          {% if section.settings.show_social_links %}
            <div class="footer__social">
              {% if settings.social_instagram != blank %}
                <a href="https://www.instagram.com/{{ settings.social_instagram | remove: '@' }}"
                   class="footer__social-link"
                   target="_blank"
                   rel="noopener noreferrer"
                   aria-label="Instagram">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              {% endif %}

              {% if settings.social_youtube != blank %}
                <a href="https://www.youtube.com/{{ settings.social_youtube | remove: '@' }}"
                   class="footer__social-link"
                   target="_blank"
                   rel="noopener noreferrer"
                   aria-label="YouTube">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    {%- comment -%}Payment methods{%- endcomment -%}
    {% if section.settings.show_payment_icons %}
      <div class="footer__payment">
        <div class="footer__payment-heading small text-muted">{{ section.settings.payment_heading }}</div>
        <div class="footer__payment-icons">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {%- comment -%}Bottom bar{%- endcomment -%}
    <div class="footer__bottom">
      <div class="footer__legal">
        <ul class="footer__legal-list">
          {% for block in section.blocks %}
            {% if block.type == 'legal_link' %}
              <li class="footer__legal-item">
                <a href="{{ block.settings.link }}" class="footer__link small">
                  {{ block.settings.label }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <div class="footer__copyright small text-muted">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        {% if section.settings.show_powered_by %}
          <span class="footer__divider">|</span>
          Powered by <a href="https://www.shopify.com" target="_blank" rel="noopener">Shopify</a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-off-white);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-3xl);
  }

  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: repeat(5, 1fr);
      gap: var(--spacing-xl);
    }
  }

  .footer__heading {
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-md);
    color: var(--color-black);
  }

  .footer__list,
  .footer__contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__list-item {
    margin-bottom: var(--spacing-sm);
  }

  .footer__link {
    color: var(--color-charcoal);
    text-decoration: none;
    font-size: var(--font-size-small);
    transition: color var(--transition-base);
  }

  .footer__link:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .footer__contact-item {
    margin-bottom: var(--spacing-md);
    font-size: var(--font-size-small);
    color: var(--color-charcoal);
    line-height: var(--line-height-body);
  }

  .footer__contact-item strong {
    color: var(--color-black);
    font-weight: var(--font-weight-medium);
  }

  .footer__social {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-charcoal);
    transition: color var(--transition-base);
  }

  .footer__social-link:hover {
    color: var(--color-primary);
  }

  .footer__payment {
    padding: var(--spacing-xl) 0;
    border-top: 1px solid var(--color-border);
    margin-bottom: var(--spacing-lg);
  }

  .footer__payment-heading {
    margin-bottom: var(--spacing-md);
  }

  .footer__payment-icons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .footer__payment-icon {
    height: 24px;
    width: auto;
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .footer__legal-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__legal-item::after {
    content: '|';
    margin-left: var(--spacing-md);
    color: var(--color-light-gray);
  }

  .footer__legal-item:last-child::after {
    content: '';
    margin-left: 0;
  }

  .footer__copyright {
    color: var(--color-gray);
  }

  .footer__divider {
    margin: 0 var(--spacing-xs);
    color: var(--color-light-gray);
  }
</style>

