{% comment %}
  Homepage Quote CTA
{% endcomment %}

<section class="home-quote-cta">
  <div class="container">
    <div class="home-quote-cta__panel">
      <div>
        <h2>{{ section.settings.heading }}</h2>
        {% if section.settings.text != blank %}
          <p class="text-secondary">{{ section.settings.text }}</p>
        {% endif %}
      </div>
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="btn btn--primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .home-quote-cta {
    padding: var(--spacing-3xl) 0;
    background-color: var(--color-off-white);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }

  .home-quote-cta__panel {
    display: grid;
    gap: var(--spacing-lg);
    align-items: center;
    border: 1px solid var(--color-border);
    padding: var(--spacing-2xl);
    background-color: var(--color-white);
  }

  @media (min-width: 768px) {
    .home-quote-cta__panel {
      grid-template-columns: 1fr auto;
      gap: var(--spacing-2xl);
    }
  }
</style>

{% schema %}
{
  "name": "Home Quote CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Need a bespoke fabrication?"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Send drawings or specifications and get a fast, itemized quote from our engineering team."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Request a Quote"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/pages/quotation-form"
    }
  ],
  "presets": [
    {
      "name": "Home Quote CTA"
    }
  ]
}
{% endschema %}
