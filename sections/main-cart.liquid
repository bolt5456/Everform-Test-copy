{% comment %}
  Main Cart
{% endcomment %}

<section class="main-cart section">
  <div class="container">
    <h1>Cart</h1>

    {% if cart.item_count == 0 %}
      <p class="text-secondary">Your cart is empty.</p>
      <a href="/collections/all" class="btn btn--primary">Continue shopping</a>
    {% else %}
      <form action="{{ routes.cart_url }}" method="post" class="main-cart__form">
        <div class="main-cart__items">
          {% for item in cart.items %}
            <div class="main-cart__item">
              <div class="main-cart__image">
                {% if item.image %}
                  <img
                    src="{{ item.image | image_url: width: 200 }}"
                    alt="{{ item.image.alt | default: item.product.title | escape }}"
                    width="120"
                    height="150"
                  >
                {% endif %}
              </div>
              <div class="main-cart__details">
                <div>
                  <a href="{{ item.url }}" class="main-cart__title">{{ item.product.title }}</a>
                  {% if item.variant.title != 'Default Title' %}
                    <div class="small text-muted">{{ item.variant.title }}</div>
                  {% endif %}
                </div>
                <div class="main-cart__price">{{ item.final_line_price | money }}</div>
              </div>
              <div class="main-cart__quantity">
                <label class="form-label" for="Quantity-{{ item.key }}">Qty</label>
                <input
                  type="number"
                  id="Quantity-{{ item.key }}"
                  name="updates[]"
                  value="{{ item.quantity }}"
                  min="0"
                  class="form-input"
                >
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="main-cart__summary">
          <div class="main-cart__total">
            <span class="text-muted">Subtotal</span>
            <strong>{{ cart.total_price | money }}</strong>
          </div>
          <div class="main-cart__actions">
            <button type="submit" name="update" class="btn btn--secondary">Update cart</button>
            <button type="submit" name="checkout" class="btn btn--primary">Checkout</button>
          </div>
        </div>
      </form>
    {% endif %}
  </div>
</section>

<style>
  .main-cart__items {
    display: grid;
    gap: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
  }

  .main-cart__item {
    display: grid;
    gap: var(--spacing-md);
    grid-template-columns: 100px 1fr;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--spacing-lg);
  }

  .main-cart__details {
    display: grid;
    gap: var(--spacing-sm);
  }

  .main-cart__title {
    font-weight: var(--font-weight-medium);
  }

  .main-cart__summary {
    display: grid;
    gap: var(--spacing-md);
    border-top: 1px solid var(--color-border);
    padding-top: var(--spacing-lg);
  }

  .main-cart__total {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .main-cart__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  @media (min-width: 768px) {
    .main-cart__item {
      grid-template-columns: 120px 1fr 140px;
      align-items: center;
    }

    .main-cart__quantity {
      text-align: right;
    }
  }
</style>

{% schema %}
{
  "name": "Main Cart",
  "settings": []
}
{% endschema %}
