{% comment %}
  Technical Product Accordions
  For technical products: Features, Specifications, Installation, Delivery FAQs
  Uses product metafields for content
{% endcomment %}

<div class="technical-accordions">
  {% if section.settings.heading != blank %}
    <h2 class="technical-accordions__heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="accordions-wrapper">
    {%- comment -%}Features accordion{%- endcomment -%}
    {% if section.settings.show_features and product.metafields.custom.features_list %}
      <div class="accordion" data-accordion>
        <button type="button" class="accordion__header" aria-expanded="false">
          <span>Features</span>
          <span class="accordion__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </span>
        </button>
        <div class="accordion__content">
          <div class="accordion__body">
            <ul class="list-features">
              {% for feature in product.metafields.custom.features_list.value %}
                <li>{{ feature }}</li>
              {% endfor %}
            </ul>

            {%- comment -%}Standards compliance{%- endcomment -%}
            {% if product.metafields.custom.standards_compliance %}
              <div class="technical-accordions__standards">
                <strong>Standards & Certifications:</strong>
                <div class="rte">
                  {{ product.metafields.custom.standards_compliance }}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}

    {%- comment -%}Specifications accordion{%- endcomment -%}
    {% if section.settings.show_specifications %}
      <div class="accordion" data-accordion>
        <button type="button" class="accordion__header" aria-expanded="false">
          <span>Specifications</span>
          <span class="accordion__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </span>
        </button>
        <div class="accordion__content">
          <div class="accordion__body">
            <dl class="technical-specs">
              {% if product.metafields.custom.material %}
                <div class="technical-specs__item">
                  <dt>Material</dt>
                  <dd>{{ product.metafields.custom.material }}</dd>
                </div>
              {% endif %}

              {% if product.metafields.custom.thickness %}
                <div class="technical-specs__item">
                  <dt>Thickness/Gauge</dt>
                  <dd>{{ product.metafields.custom.thickness }}</dd>
                </div>
              {% endif %}

              {% if product.metafields.custom.warranty %}
                <div class="technical-specs__item">
                  <dt>Warranty</dt>
                  <dd>{{ product.metafields.custom.warranty }}</dd>
                </div>
              {% endif %}

              {% if product.metafields.custom.lead_time %}
                <div class="technical-specs__item">
                  <dt>Lead Time</dt>
                  <dd>{{ product.metafields.custom.lead_time }}</dd>
                </div>
              {% endif %}
            </dl>

            {%- comment -%}Technical datasheet download{%- endcomment -%}
            {% if product.metafields.custom.technical_datasheet %}
              <div class="technical-accordions__download">
                <a href="{{ product.metafields.custom.technical_datasheet }}"
                   class="btn btn--secondary btn--sm"
                   download
                   target="_blank">
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" style="margin-right: 8px;">
                    <path d="M8 12l-4-4h2.5V2h3v6H12l-4 4z"/>
                    <path d="M14 14H2v-2h12v2z"/>
                  </svg>
                  Download Technical Datasheet (PDF)
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}

    {%- comment -%}Installation Guide accordion{%- endcomment -%}
    {% if section.settings.show_installation and product.metafields.custom.installation_guide %}
      <div class="accordion" data-accordion>
        <button type="button" class="accordion__header" aria-expanded="false">
          <span>Installation Guide</span>
          <span class="accordion__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </span>
        </button>
        <div class="accordion__content">
          <div class="accordion__body rte">
            {{ product.metafields.custom.installation_guide }}
          </div>
        </div>
      </div>
    {% endif %}

    {%- comment -%}Delivery Information accordion{%- endcomment -%}
    {% if section.settings.show_delivery and product.metafields.custom.delivery_info %}
      <div class="accordion" data-accordion>
        <button type="button" class="accordion__header" aria-expanded="false">
          <span>Delivery Information</span>
          <span class="accordion__icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </span>
        </button>
        <div class="accordion__content">
          <div class="accordion__body rte">
            {{ product.metafields.custom.delivery_info }}
          </div>
        </div>
      </div>
    {% endif %}

    {%- comment -%}Custom accordions from blocks{%- endcomment -%}
    {% for block in section.blocks %}
      {% if block.type == 'accordion' %}
        <div class="accordion" data-accordion {{ block.shopify_attributes }}>
          <button type="button" class="accordion__header" aria-expanded="false">
            <span>{{ block.settings.title }}</span>
            <span class="accordion__icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </span>
          </button>
          <div class="accordion__content">
            <div class="accordion__body rte">
              {{ block.settings.content }}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .technical-accordions {
    padding: var(--spacing-2xl) 0;
  }

  .technical-accordions__heading {
    margin-bottom: var(--spacing-lg);
  }

  .accordions-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  /* Technical specs list */
  .technical-specs {
    display: grid;
    gap: var(--spacing-md);
    margin: 0;
  }

  .technical-specs__item {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--spacing-md);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--color-border);
  }

  .technical-specs__item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .technical-specs dt {
    font-weight: var(--font-weight-medium);
    color: var(--color-black);
  }

  .technical-specs dd {
    margin: 0;
    color: var(--color-charcoal);
  }

  .technical-accordions__standards {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .technical-accordions__standards strong {
    display: block;
    margin-bottom: var(--spacing-sm);
    color: var(--color-black);
  }

  .technical-accordions__download {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .technical-accordions__download .btn {
    display: inline-flex;
    align-items: center;
  }

  @media (min-width: 768px) {
    .technical-specs {
      grid-template-columns: 1fr 1fr;
    }

    .technical-specs__item {
      grid-column: span 1;
    }
  }
</style>

{% schema %}
{
  "name": "Technical Accordions",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Technical Information"
    },
    {
      "type": "checkbox",
      "id": "show_features",
      "label": "Show Features Accordion",
      "default": true,
      "info": "Displays features from product.metafields.custom.features_list"
    },
    {
      "type": "checkbox",
      "id": "show_specifications",
      "label": "Show Specifications Accordion",
      "default": true,
      "info": "Displays material, thickness, warranty, lead time"
    },
    {
      "type": "checkbox",
      "id": "show_installation",
      "label": "Show Installation Guide",
      "default": true,
      "info": "Displays product.metafields.custom.installation_guide"
    },
    {
      "type": "checkbox",
      "id": "show_delivery",
      "label": "Show Delivery Information",
      "default": true,
      "info": "Displays product.metafields.custom.delivery_info"
    }
  ],
  "blocks": [
    {
      "type": "accordion",
      "name": "Custom Accordion",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Accordion Title",
          "default": "Additional Information"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Accordion Content",
          "default": "<p>Add your custom content here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Technical Accordions"
    }
  ]
}
{% endschema %}
