{% comment %}
  Hero Slideshow Section
  Rotating slides with imagery, headlines, and CTAs
{% endcomment %}

<div class="hero-slideshow section" data-hero-slideshow>
  {% if section.blocks.size > 0 %}
    <div class="hero-slideshow__wrapper">
      <div class="hero-slideshow__slides" data-slides-container>
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            <div class="hero-slide{% if forloop.first %} is-active{% endif %}" data-slide {{ block.shopify_attributes }}>
              {%- comment -%}Background image{%- endcomment -%}
              {% if block.settings.image != blank %}
                <div class="hero-slide__image-wrapper">
                  <img
                    src="{{ block.settings.image | image_url: width: 1920 }}"
                    srcset="
                      {{ block.settings.image | image_url: width: 768 }} 768w,
                      {{ block.settings.image | image_url: width: 1200 }} 1200w,
                      {{ block.settings.image | image_url: width: 1920 }} 1920w
                    "
                    sizes="100vw"
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                    class="hero-slide__image"
                  >
                  <div class="hero-slide__overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
                </div>
              {% endif %}

              {%- comment -%}Slide content{%- endcomment -%}
              <div class="hero-slide__content container">
                <div class="hero-slide__text-wrapper hero-slide__text-wrapper--{{ block.settings.content_alignment }}">
                  {% if block.settings.subtitle != blank %}
                    <p class="hero-slide__subtitle">{{ block.settings.subtitle }}</p>
                  {% endif %}

                  {% if block.settings.heading != blank %}
                    <h2 class="hero-slide__heading">{{ block.settings.heading }}</h2>
                  {% endif %}

                  {% if block.settings.text != blank %}
                    <div class="hero-slide__text">{{ block.settings.text }}</div>
                  {% endif %}

                  {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                    <div class="hero-slide__buttons">
                      <a href="{{ block.settings.button_link }}" class="btn btn--primary btn--lg">
                        {{ block.settings.button_label }}
                      </a>

                      {% if block.settings.button_label_2 != blank and block.settings.button_link_2 != blank %}
                        <a href="{{ block.settings.button_link_2 }}" class="btn btn--secondary btn--lg">
                          {{ block.settings.button_label_2 }}
                        </a>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {%- comment -%}Navigation arrows{%- endcomment -%}
      {% if section.blocks.size > 1 and section.settings.show_arrows %}
        <button type="button" class="hero-slideshow__arrow hero-slideshow__arrow--prev" data-prev-slide aria-label="Previous slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button type="button" class="hero-slideshow__arrow hero-slideshow__arrow--next" data-next-slide aria-label="Next slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      {% endif %}

      {%- comment -%}Pagination dots{%- endcomment -%}
      {% if section.blocks.size > 1 and section.settings.show_dots %}
        <div class="hero-slideshow__dots" data-dots-container>
          {% for block in section.blocks %}
            <button type="button" class="hero-slideshow__dot{% if forloop.first %} is-active{% endif %}" data-dot="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

<script>
  // Hero slideshow functionality
  (function() {
    const slideshow = document.querySelector('[data-hero-slideshow]');
    if (!slideshow) return;

    const slidesContainer = slideshow.querySelector('[data-slides-container]');
    const slides = slideshow.querySelectorAll('[data-slide]');
    const prevButton = slideshow.querySelector('[data-prev-slide]');
    const nextButton = slideshow.querySelector('[data-next-slide]');
    const dotsContainer = slideshow.querySelector('[data-dots-container]');
    const dots = dotsContainer ? dotsContainer.querySelectorAll('[data-dot]') : [];

    let currentIndex = 0;
    let autoplayInterval;
    const autoplay = {{ section.settings.autoplay | json }};
    const autoplaySpeed = {{ section.settings.autoplay_speed | times: 1000 }};

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('is-active', i === index);
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle('is-active', i === index);
      });

      currentIndex = index;
    }

    function nextSlide() {
      const nextIndex = (currentIndex + 1) % slides.length;
      showSlide(nextIndex);
    }

    function prevSlide() {
      const prevIndex = (currentIndex - 1 + slides.length) % slides.length;
      showSlide(prevIndex);
    }

    function startAutoplay() {
      if (autoplay && slides.length > 1) {
        autoplayInterval = setInterval(nextSlide, autoplaySpeed);
      }
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
      }
    }

    // Event listeners
    if (prevButton) {
      prevButton.addEventListener('click', () => {
        prevSlide();
        stopAutoplay();
      });
    }

    if (nextButton) {
      nextButton.addEventListener('click', () => {
        nextSlide();
        stopAutoplay();
      });
    }

    dots.forEach(dot => {
      dot.addEventListener('click', () => {
        const index = parseInt(dot.dataset.dot);
        showSlide(index);
        stopAutoplay();
      });
    });

    // Pause autoplay on hover
    slideshow.addEventListener('mouseenter', stopAutoplay);
    slideshow.addEventListener('mouseleave', startAutoplay);

    // Start autoplay
    startAutoplay();
  })();
</script>

<style>
  .hero-slideshow {
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  .hero-slideshow__wrapper {
    position: relative;
    min-height: 400px;
  }

  @media (min-width: 768px) {
    .hero-slideshow__wrapper {
      min-height: 500px;
    }
  }

  @media (min-width: 1024px) {
    .hero-slideshow__wrapper {
      min-height: 600px;
    }
  }

  .hero-slideshow__slides {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s ease;
  }

  .hero-slide.is-active {
    opacity: 1;
    visibility: visible;
    position: relative;
  }

  .hero-slide__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-slide__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-slide__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-black);
  }

  .hero-slide__content {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    min-height: 400px;
    padding: var(--spacing-4xl) 0;
  }

  @media (min-width: 768px) {
    .hero-slide__content {
      min-height: 500px;
    }
  }

  @media (min-width: 1024px) {
    .hero-slide__content {
      min-height: 600px;
    }
  }

  .hero-slide__text-wrapper {
    max-width: 600px;
  }

  .hero-slide__text-wrapper--left {
    margin-right: auto;
  }

  .hero-slide__text-wrapper--center {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  .hero-slide__text-wrapper--right {
    margin-left: auto;
    text-align: right;
  }

  .hero-slide__subtitle {
    font-size: var(--font-size-small);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-caps);
    color: var(--color-white);
    margin-bottom: var(--spacing-sm);
  }

  .hero-slide__heading {
    font-size: var(--font-size-h1-mobile);
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
  }

  @media (min-width: 1024px) {
    .hero-slide__heading {
      font-size: var(--font-size-h1-desktop);
    }
  }

  .hero-slide__text {
    font-size: 1.125rem;
    line-height: 1.5;
    color: var(--color-white);
    margin-bottom: var(--spacing-lg);
  }

  .hero-slide__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .hero-slide__text-wrapper--center .hero-slide__buttons {
    justify-content: center;
  }

  .hero-slide__text-wrapper--right .hero-slide__buttons {
    justify-content: flex-end;
  }

  /* Navigation arrows */
  .hero-slideshow__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color var(--transition-base);
  }

  .hero-slideshow__arrow:hover {
    background-color: var(--color-white);
  }

  .hero-slideshow__arrow--prev {
    left: var(--spacing-lg);
  }

  .hero-slideshow__arrow--next {
    right: var(--spacing-lg);
  }

  /* Pagination dots */
  .hero-slideshow__dots {
    position: absolute;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    gap: var(--spacing-sm);
  }

  .hero-slideshow__dot {
    width: 12px;
    height: 12px;
    border: 2px solid var(--color-white);
    border-radius: 50%;
    background-color: transparent;
    cursor: pointer;
    transition: background-color var(--transition-base);
  }

  .hero-slideshow__dot.is-active,
  .hero-slideshow__dot:hover {
    background-color: var(--color-white);
  }
</style>

