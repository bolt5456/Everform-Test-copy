{% comment %}
  Homepage Contact Form
{% endcomment %}

<section class="home-contact section">
  <div class="container">
    <div class="home-contact__grid">
      <div class="home-contact__content">
        <h2>{{ section.settings.heading }}</h2>
        {% if section.settings.text != blank %}
          <p class="text-secondary">{{ section.settings.text }}</p>
        {% endif %}

        <div class="home-contact__details">
          <div class="home-contact__detail">
            <span class="small text-uppercase text-muted">Phone</span>
            <a href="tel:{{ settings.contact_phone | remove: ' ' }}">
              {{ settings.contact_phone }}
            </a>
          </div>
          <div class="home-contact__detail">
            <span class="small text-uppercase text-muted">Email</span>
            <a href="mailto:{{ settings.contact_email }}">
              {{ settings.contact_email }}
            </a>
          </div>
          <div class="home-contact__detail">
            <span class="small text-uppercase text-muted">Hours</span>
            <div>{{ settings.contact_hours }}</div>
          </div>
        </div>
      </div>

      <div class="home-contact__form">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <div class="alert alert--success">Thanks, we'll be in touch within 48 hours.</div>
          {% endif %}

          {% if form.errors %}
            <div class="alert alert--error">Please correct the errors and try again.</div>
          {% endif %}

          <div class="form-group">
            <label class="form-label form-label--required" for="ContactName-{{ section.id }}">Name</label>
            <input type="text" id="ContactName-{{ section.id }}" name="contact[name]" class="form-input" required>
          </div>

          <div class="form-group">
            <label class="form-label form-label--required" for="ContactEmail-{{ section.id }}">Email</label>
            <input type="email" id="ContactEmail-{{ section.id }}" name="contact[email]" class="form-input" required>
          </div>

          <div class="form-group">
            <label class="form-label" for="ContactPhone-{{ section.id }}">Phone</label>
            <input type="tel" id="ContactPhone-{{ section.id }}" name="contact[phone]" class="form-input">
          </div>

          <div class="form-group">
            <label class="form-label form-label--required" for="ContactMessage-{{ section.id }}">Message</label>
            <textarea id="ContactMessage-{{ section.id }}" name="contact[body]" class="form-textarea" required></textarea>
          </div>

          <button type="submit" class="btn btn--primary btn--full">
            {{ section.settings.button_text }}
          </button>
        {% endform %}
      </div>
    </div>
  </div>
</section>

<style>
  .home-contact__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-2xl);
  }

  .home-contact__details {
    display: grid;
    gap: var(--spacing-md);
    margin-top: var(--spacing-xl);
  }

  .home-contact__detail a {
    display: inline-block;
    margin-top: var(--spacing-xs);
    color: var(--color-black);
  }

  .home-contact__form {
    border: 1px solid var(--color-border);
    padding: var(--spacing-2xl);
    background-color: var(--color-white);
  }

  @media (min-width: 1024px) {
    .home-contact__grid {
      grid-template-columns: 0.9fr 1.1fr;
      align-items: start;
    }
  }
</style>

{% schema %}
{
  "name": "Home Contact",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Talk to our fabrication team"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Share your scope, drawings, or material requirements. We respond within 48 hours."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Send Enquiry"
    }
  ],
  "presets": [
    {
      "name": "Home Contact"
    }
  ]
}
{% endschema %}
