{% comment %}
  404 Page
{% endcomment %}

<section class="main-404 section">
  <div class="container container--narrow">
    <h1>{{ section.settings.heading }}</h1>
    <p class="text-secondary">{{ section.settings.text }}</p>

    <form action="{{ routes.search_url }}" method="get" class="main-404__search">
      <input type="search" name="q" class="form-input" placeholder="Search products">
      <button type="submit" class="btn btn--primary">Search</button>
    </form>

    <div class="main-404__actions">
      <a href="{{ routes.root_url }}" class="btn btn--secondary">Back to home</a>
      <a href="/collections/all" class="btn btn--tertiary">Browse products</a>
    </div>
  </div>
</section>

<style>
  .main-404__search {
    display: grid;
    gap: var(--spacing-md);
    margin: var(--spacing-xl) 0;
  }

  .main-404__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  @media (min-width: 768px) {
    .main-404__search {
      grid-template-columns: 1fr auto;
      align-items: center;
    }
  }
</style>

{% schema %}
{
  "name": "Main 404",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page not found"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "The page you are looking for does not exist. Try searching or visit the homepage."
    }
  ]
}
{% endschema %}
